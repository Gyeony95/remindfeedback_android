<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:openDrawer="start">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#03A9F4">

            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary" />

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
                android:id="@+id/frg_holder"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

            <!--Spinner
                    android:id="@+id/category_Spinner"
                    android:layout_width="match_parent"
                    android:theme="@style/SpinnerTheme"
                    android:layout_height="45dp"
                    android:overlapAnchor="false"
                    android:background="@drawable/spinner_type1" /-->
            <LinearLayout
                    android:id="@+id/category_Spinner"
                    android:background="@drawable/spinner_type2"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd = "10dp"
                    android:layout_marginTop = "5dp"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/main_Category_Color"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart = "10dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:background="@color/blue"
                        android:text="" />

                <TextView
                        android:id="@+id/main_Category_Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize = "20sp"
                        android:layout_marginStart = "20dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:text="TextView" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ing_Linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/under_line"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:padding="10dp">


                <LinearLayout
                        android:id="@+id/ing_Case"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/all_line"
                        android:orientation="horizontal"
                        android:gravity="right">
                    <TextView
                            android:gravity="center_horizontal|center_vertical"
                            android:layout_gravity="left"
                            android:layout_width="60dp"
                            android:layout_height="30dp" android:id="@+id/ing_Btn" android:text="진행중"/>
                    <TextView
                            android:gravity="center_horizontal|center_vertical"
                            android:layout_gravity="left"
                            android:layout_width="60dp"
                            android:layout_height="30dp" android:id="@+id/ed_Btn" android:text="진행완료"/>
                </LinearLayout>


                <TextView
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView39" android:layout_weight="1"/>
                <!--TextView
                        android:id="@+id/recent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="최신순 |"
                        android:textSize="15dp" />

                <TextView
                        android:id="@+id/older"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:text="  오래된 순 |"
                        android:textSize="15dp" />

                <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="  제목 순 |"
                        android:textSize="15dp" />

                <TextView
                        android:id="@+id/alarm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="  알림 순"
                        android:textSize="15dp" /-->

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/Main_Recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

        </LinearLayout>
    </LinearLayout>

    <include
            android:id="@+id/test"
            layout="@layout/floating_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/nav_header"
            app:menu="@menu/activity_main_drawer_menu" />


</androidx.drawerlayout.widget.DrawerLayout>
