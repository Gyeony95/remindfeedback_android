<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" tools:context=".MyPage.ImagePick.ImagePickActivity">
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/whitegrey"
                android:src="@drawable/ic_launcher_foreground" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/modify_Profile_ImageView"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:src="@drawable/ic_default_profile" />

            <TextView
                    android:id="@+id/Imagepick_Nickname_Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="3월 김철수" />

            <TextView
                    android:id="@+id/Imagepick_Email_Tv"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="rrxxxxx@naver.com" />
            <TextView
                    android:id="@+id/Imagepick_Introduction_Tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="1" android:gravity="center_horizontal|center_vertical"
                    android:text="상태메시지"/>

        </LinearLayout>
    </FrameLayout>
    <Button
            android:id="@+id/Imagepick_Album_Button"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/big_input_bg"
            android:layout_height="wrap_content" android:text="앨범"/>
    <Button
            android:id="@+id/Imagepick_Camera_Button"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/big_input_bg"
            android:layout_height="wrap_content" android:text="카메라"/>
</LinearLayout>