<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/under_line"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:text="피드백 주제"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="20sp" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/under_line"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp">

                <TextView
                        android:id="@+id/create_Feedback_Color_Tv"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:background="@color/black" />

                <TextView
                        android:id="@+id/create_Feedback_Title_Tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:alpha="0.87"
                        android:gravity="center"
                        android:paddingLeft="13dp"
                        android:text="Default"
                        android:textColor="#000"
                        android:textColorHint="#1f000000"
                        android:textSize="19dp" />

                <TextView
                        android:id="@+id/create_Feedback_Id_Tv"
                        android:layout_width="1dp"
                        android:layout_height="1dp" />
            </LinearLayout>

            <Button
                    android:id="@+id/pick_Category_Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/big_input_bg"
                    android:text="주제 변경" />

            <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/under_line"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:text="피드백 제목"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="20sp" />

            <EditText
                    android:id="@+id/create_Feedback_Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/under_line_gray"
                    android:ems="10"
                    android:hint="피드백 제목을 입력해주세요"
                    android:inputType="textPersonName"
                    android:padding="16dp"
                    android:textSize="18sp" />

            <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/under_line"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:text="피드백 만료 날짜"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="20sp" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/under_line_gray"
                    android:gravity="center"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/choose_Category_Tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:text="날짜 선택"
                        android:textSize="18sp" />

                <TextView
                        android:id="@+id/type_Change_Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <ImageView
                        android:id="@+id/drop_Calendar_Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_down_black" />
            </LinearLayout>

            <com.prolificinteractive.materialcalendarview.MaterialCalendarView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/calendarView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:mcv_selectionColor="#a9dbf0cb"
                    app:mcv_showOtherDates="defaults" />

            <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/under_line"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:text="피드백 조언자"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="20sp" />

            <LinearLayout
                    android:id="@+id/create_Feedback_Add_Adviser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/under_line_gray"
                    android:orientation="horizontal"
                    android:padding="16dp">

                <ImageView
                        android:id="@+id/create_Feedback_Button"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="#f6f6f6"
                        android:src="@drawable/ic_add_black" />

                <TextView
                        android:id="@+id/add_Adviser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="조언자 추가하기"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                        android:textColor="@color/blue"
                        android:textSize="20sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/create_Feedback_Profile_Holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@drawable/under_line"
                android:padding="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/create_Feedback_Profile_Image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="4dp"
                    android:src="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/create_Feedback_Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="TextView"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/create_Feedback_script"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:fontFamily="@font/font"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="TextView"
                        android:textSize="14sp" />
                </LinearLayout>


            </LinearLayout>
            <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="주의) 조언자를 지정하지 않으면 조언자가 없는 '없음' 상태로 피드백이 생성됩니다."
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <!--<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2" />

                <TextView
                        android:id="@+id/textView17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:gravity="right"
                        android:text="자세히 알아보기"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/blue" />
            </LinearLayout>-->
        </LinearLayout>
    </ScrollView>

</LinearLayout>