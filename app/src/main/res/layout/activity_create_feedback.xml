<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".CreateFeedback.CreateFeedbackActivity">

    <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/under_line"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:text="피드백 주제"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="20sp" />

    <EditText
            android:id="@+id/create_Feedback_Category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/under_line_gray"
            android:ems="10"
            android:hint="피드백 주제를 입력하거나 찾아주세요"
            android:inputType="textPersonName"
            android:padding="16dp"
            android:textSize="18sp" />

    <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/under_line"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:text="피드백 제목"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="20sp" />

    <EditText
            android:id="@+id/create_Feedback_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/under_line_gray"
            android:ems="10"
            android:hint="피드백 제목을 입력해주세요"
            android:inputType="textPersonName"
            android:padding="16dp"
            android:textSize="18sp" />

    <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/under_line"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:text="피드백 날짜"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="20sp" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/under_line_gray"
            android:gravity="center"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/choose_Category_Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="2019년 10월 28일 오후 4시 27분"
                android:textSize="18sp" />

        <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        <ImageView
                android:id="@+id/choose_Category_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                app:srcCompat="@android:drawable/ic_menu_my_calendar" />
    </LinearLayout>

    <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/under_line"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:text="피드백 조언자"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="20sp" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/under_line_gray"
            android:padding="16dp"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/create_Feedback_Button"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="#f6f6f6"
                android:src="@drawable/ic_add_black" />

        <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:text="조언자 추가하기"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:textColor="@color/blue"
                android:textSize="20sp" />
    </LinearLayout>

    <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="20dp"
            android:text="주의) 조언자를 지정하지 않으면 조언자가 없는 '없음' 상태로 피드백이 생성됩니다."
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2" />

        <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:gravity="right"
                android:text="자세히 알아보기"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/blue" />
    </LinearLayout>
</LinearLayout>