<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


      <ScrollView
              android:layout_width="match_parent"
              android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">
                  <TextView
                          android:id="@+id/textView39"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:background="@drawable/under_line"
                          android:gravity="center_vertical"
                          android:padding="16dp"
                          android:text="포스트 제목"
                          android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                          android:textSize="20sp" />

                  <EditText
                          android:id="@+id/create_Post_Title_Tv"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:background="@drawable/under_line_gray"
                          android:ems="10"
                          android:hint="포스트 제목을 입력해주세요"
                          android:inputType="textPersonName"
                          android:padding="16dp"
                          android:textSize="18sp" />

                  <TextView
                          android:id="@+id/textView3"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:background="@drawable/under_line"
                          android:gravity="center_vertical"
                          android:padding="16dp"
                          android:text="포스트 내용"
                          android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                          android:textSize="20sp" />

                  <EditText
                          android:id="@+id/create_Post_Script_Tv"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:background="@drawable/under_line_gray"
                          android:ems="10"
                          android:hint="포스트 내용을 입력해주세요"
                          android:inputType="textPersonName"
                          android:padding="16dp"
                          android:textSize="18sp" />


                  <TextView
                          android:id="@+id/textView40"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:background="@drawable/under_line"
                          android:gravity="center_vertical"
                          android:padding="16dp"
                          android:text="컨텐츠 타입"
                          android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                          android:textSize="20sp" />
                  <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:background="@drawable/under_line_gray"
                          android:gravity="center"
                          android:orientation="horizontal">


                        <ImageView
                                android:layout_margin="10dp"
                                android:layout_width="50dp"
                                android:layout_height="50dp" app:srcCompat="@drawable/ic_photo_black"
                                android:id="@+id/contents_Image"/>
                        <TextView
                                android:id="@+id/type_Change_Button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20dp"
                                android:layout_weight="1" android:text="컨텐츠 타입 변경"/>

                  </LinearLayout>


                  <LinearLayout
                          android:orientation="horizontal"
                          android:background="@drawable/under_line"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">
                        <TextView
                                android:id="@+id/textView41"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:padding="16dp"
                                android:text="파일첨부"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                android:textSize="20sp" android:layout_weight="1"/>
                        <ImageView
                                android:layout_margin="10dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp" app:srcCompat="@drawable/ic_add_black"
                                android:id="@+id/add_File_Button"/>
                  </LinearLayout>


            </LinearLayout>
      </ScrollView>

</LinearLayout>