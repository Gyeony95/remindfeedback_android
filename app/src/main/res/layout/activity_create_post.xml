<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

      <TextView
              android:id="@+id/textView39"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/under_line"
              android:gravity="center_vertical"
              android:padding="16dp"
              android:text="포스트 제목"
              android:textAppearance="@style/TextAppearance.AppCompat.Body2"
              android:textSize="20sp" />

      <EditText
              android:id="@+id/create_Post_Title_Tv"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/under_line_gray"
              android:ems="10"
              android:hint="포스트 제목을 입력해주세요"
              android:inputType="textPersonName"
              android:padding="16dp"
              android:textSize="18sp" />

      <TextView
              android:id="@+id/textView3"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/under_line"
              android:gravity="center_vertical"
              android:padding="16dp"
              android:text="포스트 내용"
              android:textAppearance="@style/TextAppearance.AppCompat.Body2"
              android:textSize="20sp" />

      <EditText
              android:id="@+id/create_Post_Script_Tv"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/under_line_gray"
              android:ems="10"
              android:hint="포스트 내용을 입력해주세요"
              android:inputType="textPersonName"
              android:padding="16dp"
              android:textSize="18sp" />



      <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/under_line_gray"
              android:gravity="center"
              android:orientation="horizontal">

            <TextView
                    android:id="@+id/choose_Category_Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:text="비디오"
                    android:textSize="18sp"/>

            <TextView
                    android:id="@+id/textView31"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            <ImageView
                    android:id="@+id/choose_Category_Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/ic_left_black" tools:ignore="VectorDrawableCompat"/>
      </LinearLayout>

</LinearLayout>